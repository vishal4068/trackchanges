Sub ExportTrackChangesAsPDF()
    Dim rng As Range
    Dim newDoc As Document
    Dim pageNumber As Integer
    Dim pageRange As Range
    
    ' Loop through each revision
    For Each rev In ActiveDocument.Revisions
        ' Get the page number of the revision
        Set rng = rev.Range
        pageNumber = rng.Information(wdActiveEndPageNumber)
        
        ' Create a new document for each page if it doesn't exist already
        If Documents.Count <= pageNumber Then
            Set newDoc = Documents.Add
        Else
            Set newDoc = Documents(pageNumber)
        End If
        
        ' Copy the revision to the new document
        rng.Copy
        newDoc.Range.Paste
        
        ' Export the new document as PDF
        newDoc.ExportAsFixedFormat OutputFileName:="Page " & pageNumber & " Track Changes.pdf", ExportFormat:=wdExportFormatPDF
        
        ' Clear the new document for the next iteration
        newDoc.Content.Delete
    Next rev
End Sub
