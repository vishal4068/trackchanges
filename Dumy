from docx2python import docx2python

def convert_docx_to_xml_with_revisions(docx_file, xml_file):
    # Convert docx to python dictionary
    docx = docx2python(docx_file)
    
    # Extract XML representation with revisions
    xml_with_revisions = docx.xml_with_revisions
    
    # Write XML to file
    with open(xml_file, 'w', encoding='utf-8') as f:
        f.write(xml_with_revisions)

# Example usage
docx_file = "example.docx"
xml_file = "document_with_revisions.xml"
convert_docx_to_xml_with_revisions(docx_file, xml_file)
