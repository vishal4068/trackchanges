from docx import Document
from lxml import etree

def docx_to_xml(docx_file, xml_file):
    # Read the DOCX file
    doc = Document(docx_file)

    # Create a root element for the XML tree
    root = etree.Element("document")

    # Iterate through paragraphs and add them to the XML tree
    for paragraph in doc.paragraphs:
        p = etree.SubElement(root, "paragraph")
        p.text = paragraph.text

    # Serialize the XML tree to a file
    tree = etree.ElementTree(root)
    with open(xml_file, "wb") as f:
        tree.write(f, pretty_print=True, xml_declaration=True, encoding="utf-8")

# Example usage
docx_file = "example.docx"
xml_file = "output.xml"
docx_to_xml(docx_file, xml_file)
