from docx import Document
from reportlab.pdfgen import canvas
from reportlab.lib.pagesizes import letter

def extract_print_markup(docx_file):
    document = Document(docx_file)
    markup_text = ""
    for paragraph in document.paragraphs:
        if paragraph.style.name == 'Balloon Text':
            markup_text += paragraph.text + '\n'
    return markup_text

def create_pdf(markup_text, output_pdf):
    c = canvas.Canvas(output_pdf, pagesize=letter)
    width, height = letter
    c.drawString(50, height - 50, markup_text)
    c.save()

if __name__ == "__main__":
    docx_file = "your_docx_file.docx"
    output_pdf = "print_markup.pdf"
    markup_text = extract_print_markup(docx_file)
    create_pdf(markup_text, output_pdf)
